<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.rank.RankFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/explore_tl_strategy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@android:color/transparent"
        android:theme="@style/Theme.MaterialComponents"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/rank_ic_tab_indicator"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="3dp"
        app:tabMaxWidth="180dp"
        app:tabMinWidth="160dp"
        app:tabMode="fixed"
        app:tabRippleColor="@android:color/transparent"
        app:tabTextAppearance="@style/tab_style"
        app:tabTextColor="@color/teal_200" />


    <com.example.openeye.ui.widge.ViewPager2Container
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/explore_vp_strategy"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.example.openeye.ui.widge.ViewPager2Container>

</LinearLayout>