<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/category_iv_detail_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="12dp"
        android:src="@color/teal_200"
        android:transitionName="video_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/RoundedStyle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/category_iv_detail_author"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:src="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/category_tv_detail_title2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_iv_detail_cover"
        app:shapeAppearance="@style/CircleStyle" />

    <TextView
        android:id="@+id/category_tv_detail_title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="奥地利矿业大学，为未来而生的 MZ 世代"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/category_tv_detail_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/category_iv_detail_author"
        app:layout_constraintTop_toTopOf="@+id/category_iv_detail_author" />

    <TextView
        android:id="@+id/category_tv_detail_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="全球旅行视频精选"
        app:layout_constraintBottom_toBottomOf="@+id/category_iv_detail_author"
        app:layout_constraintStart_toEndOf="@+id/category_iv_detail_author"
        app:layout_constraintTop_toBottomOf="@+id/category_tv_detail_title2" />

    <TextView
        android:id="@+id/category_tv_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/black"
        android:padding="4dp"
        android:text="01:13"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/category_iv_detail_cover"
        app:layout_constraintEnd_toEndOf="@+id/category_iv_detail_cover" />

    <ImageView
        android:id="@+id/topic_iv_detail_share"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_share_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>