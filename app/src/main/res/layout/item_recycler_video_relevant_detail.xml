<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/video_constraint_layout_detail"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/video_iv_relevant_detail_icon"
        android:layout_width="128dp"
        android:layout_height="80dp"
        app:shapeAppearance="@style/RoundedStyle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"

        android:src="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/video_tv_relevant_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:text="秋天美景:感受不一样的美景"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/video_tv_relevant_detail_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/video_iv_relevant_detail_icon"
        app:layout_constraintTop_toTopOf="@+id/video_iv_relevant_detail_icon" />

    <TextView
        android:id="@+id/video_tv_relevant_detail_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:text="4K 延时风景精选"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/video_iv_relevant_detail_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/video_iv_relevant_detail_icon"
        app:layout_constraintTop_toBottomOf="@+id/video_tv_relevant_detail_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/video_tv_relevant_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black"
        android:padding="4dp"
        android:text="01:13"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/video_iv_relevant_detail_icon"
        app:layout_constraintEnd_toEndOf="@+id/video_iv_relevant_detail_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>