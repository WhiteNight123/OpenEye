<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.explore.community.PictureDetailActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/picture_toolbar_detail"
        android:layout_width="match_parent"
        android:background="?attr/colorSurface"
        app:titleTextColor="?attr/colorOnSurface"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/picture_vp2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picture_toolbar_detail" />

    <com.example.openeye.ui.widge.ViewPager2Indicator
        android:id="@+id/picture_vp2_indicator"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        app:dot_between_distance="5dp"
        app:layout_constraintEnd_toEndOf="@+id/picture_toolbar_detail"
        app:layout_constraintStart_toStartOf="@+id/picture_toolbar_detail"
        app:layout_constraintTop_toBottomOf="@+id/picture_toolbar_detail" />


</androidx.constraintlayout.widget.ConstraintLayout>